<h2>Courses Table</h2>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Max Students</th>
				<th>Cost</th>
			</tr>
		</thead>
		<tbody>
			<% courses.forEach(course => { %>
			<tr>
				<td>
					<a href="<%= `/courses/${course._id}` %>">
						<%= course.title %></td>
					</a>
				<td><%= course.description %></td>
				<td><%= course.maxStudents %></td>
				<td><%= course.cost %></td>
				<td>
					<a href="<%= `/courses/${course._id}/edit` %>">
						Edit
					</a>
				</td>
				<td>
					<a href="<%= `courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this recorde?')">Delete</a>
				</td>
			</tr>
		<% }); %>
		</tbody>
	</table>