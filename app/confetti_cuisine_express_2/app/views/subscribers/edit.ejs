<div class="data-form">
	<form action="<%= `/subscribers/${subscriber._id}/update?_method=PUT`%>" method="POST">
		<h2>Edit the subscriber:</h2>
		<label for="inputName">Name</label>
		<input type="text" name="name" id="inputName" placeholder="Name" autofocus value="<%= subscriber.name %>">
		<label for="inputEmail">Email address</label>
		<input type="email" name="email" id="inputEmail" placeholder="Email address" required value="<%= subscriber.email %>">
		<label for="inputZipCode">Zip Code</label>
		<input type="text" name="zipCode" id="inputZipCode" placeholder="Zip Code" pattern="\d*" required value="<%= subscriber.zipCode %>">
		<button type="submit">Create</button>
	</form>
</div>